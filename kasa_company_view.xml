<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
        <record id="inh_view_company_form" model="ir.ui.view">
            <field name="name">inh.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='logo']" position="after">
                    <field name="secondary_logo" widget='image' class="oe_avatar oe_right" />
                </xpath>
            </field>
        </record>
  </data>
</openerp>
